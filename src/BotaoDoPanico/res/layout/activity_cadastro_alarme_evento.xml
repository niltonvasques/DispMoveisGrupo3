<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.ufba.matc89.botaodopanico.CadastroAlarmeEventoActivity" >

    <TextView
        android:id="@+id/textView1"
        style="@style/TextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/activity_alarme_evento_title" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView03"
        android:layout_centerVertical="true"
        android:text="@string/volBaixo" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_below="@+id/TextView02"
        android:text="@string/volCima" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/BtnEventoOpcao2"
        android:layout_below="@+id/TextView03"
        android:text="@string/volBaixo" />

    <Button
        android:id="@+id/BtnEventoOpcao2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/TextView04"
        android:layout_below="@+id/TextView01"
        android:text="@string/btnOp2"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView05"
        android:layout_alignLeft="@+id/BtnEventoOpcao3"
        android:text="@string/volBaixo" />

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView06"
        android:layout_alignLeft="@+id/BtnEventoOpcao3"
        android:text="@string/volBaixo" />

    <TextView
        android:id="@+id/TextView06"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/BtnEventoOpcao3"
        android:layout_alignLeft="@+id/BtnEventoOpcao3"
        android:text="@string/volCima" />

    <Button
        android:id="@+id/BtnEventoOpcao3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="26dp"
        android:text="@string/btnOp3"
        android:textSize="15sp" />

    <Button
        android:id="@+id/BtnEventoOpcao1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/TextView02"
        android:layout_alignLeft="@+id/TextView02"
        android:layout_marginBottom="14dp"
        android:text="@string/btnOp1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtE1Op1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtE3Op1"
        android:layout_alignLeft="@+id/BtnEventoOpcao1"
        android:text="@string/volCima" />

    <TextView
        android:id="@+id/txtE2Op1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtE1Op1"
        android:layout_alignLeft="@+id/BtnEventoOpcao1"
        android:text="@string/volCima" />

    <TextView
        android:id="@+id/txtE3Op1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/BtnEventoOpcao1"
        android:layout_alignLeft="@+id/BtnEventoOpcao1"
        android:text="@string/volBaixo" />

</RelativeLayout>