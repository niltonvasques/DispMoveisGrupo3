<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TestarEvento" >

    <TextView
        android:id="@+id/textView1"
        style="@style/TextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Ativado..." />
    
       <Button
           android:id="@+id/btnTelaInicial"
           android:layout_width="200dp"
           android:layout_height="38dp"
           android:layout_alignRight="@+id/textView1"
           android:layout_below="@+id/textView1"
           android:layout_marginTop="27dp"
           android:text="@string/voltar" />

       <TextView
           android:id="@+id/txtResposta"
           style="@style/TextTitle2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignRight="@+id/btnTelaInicial"
           android:layout_below="@+id/btnTelaInicial"
           android:layout_marginTop="61dp"
           android:text="" />
       
        <TextView
           android:id="@+id/txtCount"
           style="@style/TextTitle2"
           android:textSize="50dp"
           android:visibility="invisible"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignRight="@+id/btnTelaInicial"
           android:layout_below="@+id/btnTelaInicial"
           android:layout_marginTop="61dp"
           android:text="5" />

</RelativeLayout>